@{
    ViewData["Title"] = "Card Pizza";
    ViewBag.TitoloPagina = "Visualizzazione Card Pizza";
}

@model la_mia_pizzeria_static.Models.Pizza

@{
<div class="dl-border">
    <h4>Dettagli</h4>
    <hr />
    <dl class="dl-horizontal">
       <dt>
            @Html.DisplayNameFor(model => model.Foto)
       </dt>
        <dd>
            <img src="@Url.Content(Model.sFoto)" alt="@Model.Nome" />
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descrizione)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descrizione)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Prezzo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Prezzo) €
        </dd>
    </dl>
</div>
<div class="text-center">
    <button class="btn-primary btn">@Html.ActionLink("Indietro", "index", "Pizza", new { @class = "text-light text-decoration-none"})</button>
</div>
}